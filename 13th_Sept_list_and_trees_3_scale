    return is_null(xs)
        ? null
        : pair(k * head(xs),
        scale_list(tail(xs), k));
}

scale_list(list("A", "B", "C"), 10);
scale_list(list("A", "B", "C"), "D");
scale_list(list(1, 2, 3), "D");
*/

// squaring a lift

function square_list(xs) {
    const square = x => x * x;
    return is_null(xs)
        ? null
        : pair(square(head(xs)),
        square_list(tail(xs)));
}

square_list(list(1, 2, 3, 4));

// abstraction: map

// applying a function element wise to the list

function map(f, xs) {
    return is_null(xs)
        ? null
        : pair(f(head(xs)), map(f, tail(xs)));
}

// using map

function scale_list(xs, k) {
    return map(x => k * x, xs);
}
function square_list(xs) {
    return map(x => x * x, xs);
}

// making a copy of the list

function copy(xs) {
    return map(x => x, xs);
}
const original = list(1, 3, 5);
const my_copy = copy(original);

